@model List<AppRole>

@{
    ViewData["Title"] = "Roller";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Roller</h1>
<hr />

<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol İsmi</th>
    </tr>

    @foreach (var item in Model)
    {
       <tr>
           <th>@item.Id</th>
           <th>@item.Name</th>
       </tr>
    }

</table>

<a asp-action="RoleCreate" class="btn btn-info">Rol Oluştur</a>
