@model List<AppRole>

@{
    ViewData["Title"] = "Roller";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Roller</h1>
<hr />

<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol İsmi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <form asp-action="RoleDelete" asp-route-id="@item.Id" method="post">
                    <button class="btn btn-success" type="submit">Sil</button>
                </form>
            </td>
            <td><a class="btn btn-info" asp-action="RoleUpdate" asp-route-id="@item.Id">Güncelle</a></td>
        </tr>
    }

</table>

<a asp-action="RoleCreate" class="btn btn-info">Rol Oluştur</a>
