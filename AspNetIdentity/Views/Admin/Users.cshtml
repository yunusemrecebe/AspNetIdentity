@model List<AppUser>

@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Üyeler</h3>
<hr />

<table class="table table-bordered table-striped">
    <tr>
        <td>User Id</td>
        <td>User Name</td>
        <td>Email</td>
        <td>Yetkiler</td>
        <td>Yetki Atama</td>
    </tr>
    @if (Model.Count() <= 0)
    {
        <tr>
            <td colspan="3">Kayıtlı üye bulunamadı!</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td user-roles="@item.Id"></td>
                <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">Yetki Ata</a></td>
            </tr>
        }
    }
</table>

