@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "Yetki atama";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Yetki atama (@ViewBag.userName)</h1>
<hr />

<form asp-controller="Admin" asp-action="RoleAssign" method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-check">
            <input asp-for="@Model[i].IsSelected" type="checkbox" class="form-check-input" />
            <label asp-for="@Model[i].RoleId" class="form-check-label">@Model[i].RoleName</label>

            <input asp-for="@Model[i].RoleName" type="hidden" />
            <input asp-for="@Model[i].RoleId" type="hidden" />
        </div>
    }
    <input class="btn btn-success" type="submit" value="Yetki ata" />
</form>
